
{
  "manifest_version": 3,
  "name": "LinkClick",
  "version": "1.0.0",
  "description": "Verify suspicious links with AI-powered security analysis.",
  "permissions": [
  "contextMenus",
  "tabs",
  "storage",
  "scripting",
  "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://*.google.com/",
    "https://generativelanguage.googleapis.com/",
    "http://127.0.0.1:8000/*" 
  ]
}
